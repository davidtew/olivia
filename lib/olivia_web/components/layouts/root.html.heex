          <div style="padding-top: 1rem; border-top: 1px solid rgba(245, 242, 237, 0.1); margin-top: 0.5rem;">
            <span class="curator-label">Theme</span>
            <div style="display: flex; gap: 1rem; margin-top: 0.5rem;">
              <a href="/set-theme/curator" class="curator-nav-link" style="font-size: 0.6875rem;">Curator</a>
              <a href="/set-theme/gallery" class="curator-nav-link" style="font-size: 0.6875rem;">Gallery</a>
              <a href="/set-theme/cottage" class="curator-nav-link" style="font-size: 0.6875rem;">Cottage</a>
              <a href="/set-theme/original" class="curator-nav-link" style="font-size: 0.6875rem;">Original</a>
            </div>
          </div>
        </div>
      </nav>
    </header>

    <!-- Main Content -->
    <main style="flex: 1;">
      {@inner_content}
    </main>

    <!-- Footer -->
    <footer style="padding: 4rem 2rem 2rem; border-top: 1px solid rgba(245, 242, 237, 0.1);">
      <div style="max-width: 1200px; margin: 0 auto;">
        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 3rem; margin-bottom: 3rem;">
          <!-- Brand -->
          <div>
            <h3 class="curator-heading" style="font-size: 1.25rem; margin-bottom: 1rem;">Olivia Tew</h3>
            <p class="curator-body" style="font-size: 0.875rem; color: var(--curator-text-muted);">
