        font-family: 'Lato', -apple-system, BlinkMacSystemFont, sans-serif;
        font-size: 1rem;
        outline: none;
        transition: border-color 0.2s;
      }

      .gallery-form input[type="text"]:focus,
      .gallery-form input[type="email"]:focus,
      .gallery-form select:focus,
      .gallery-form textarea:focus {
        border-color: #8b7355;
      }

      .gallery-form label {
        display: block;
        margin-bottom: 0.5rem;
        font-size: 0.875rem;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        color: #6b5d54;
        font-weight: 500;
      }

      .gallery-form .field-error {
        color: #8b4513;
        font-size: 0.875rem;
        margin-top: 0.25rem;
      }

      /* Gallery Markdown Content Styling */
      main h1, main h2, main h3, main h4, main h5, main h6 {
        font-family: 'Cormorant Garamond', Georgia, serif;
        font-weight: 400;
        letter-spacing: 0.02em;
        color: #2c2416;
        margin-top: 2rem;
        margin-bottom: 1rem;
      }

      main h1 {
        font-size: 2.25rem;
        line-height: 2.5rem;
      }

      main h2 {
        font-size: 1.875rem;
        line-height: 2.25rem;
      }

      main h3 {
        font-size: 1.5rem;
        line-height: 2rem;
      }

      main p {
        margin-bottom: 1.25rem;
      }

      main ul, main ol {
        margin-bottom: 1.25rem;
        padding-left: 1.5rem;
      }

      main li {
        margin-bottom: 0.5rem;
      }

      main a {
        color: #8b7355;
        text-decoration: underline;
