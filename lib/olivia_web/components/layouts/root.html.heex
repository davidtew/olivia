      main strong {
        font-weight: 600;
        color: #2c2416;
      }

      main em {
        font-style: italic;
      }

      /* Theme Dropdown Styles */
      .theme-dropdown a:hover {
        background: #f5f1ed !important;
      }

      .hidden {
        display: none;
      }

      /* Responsive navigation for Gallery theme */
      @media (min-width: 768px) {
        .hidden.md\:flex {
          display: flex !important;
        }
        .md\:hidden {
          display: none !important;
        }
      }
    </style>
    <script>
      // Close theme dropdown when clicking outside
      document.addEventListener('click', function(event) {
        const dropdown = document.getElementById('theme-menu');
        const toggle = document.getElementById('theme-toggle');
        if (dropdown && toggle && !dropdown.contains(event.target) && !toggle.contains(event.target)) {
          dropdown.classList.add('hidden');
        }
      });
    </script>
  </head>
  <body style="height: 100%; background: #faf8f5; color: #2c2c2c; font-family: 'Lato', -apple-system, BlinkMacSystemFont, sans-serif;">
    <!-- Elegant Header -->
    <header style="background: #ffffff; border-bottom: 1px solid #e8e6e3; padding: 2rem 1.5rem;">
      <div style="max-width: 72rem; margin: 0 auto;">
        <div style="display: flex; align-items: center; justify-content: space-between;">
          <div>
            <h1 class="signature" style="margin-bottom: 0.25rem; color: #8b7355;">Olivia</h1>
            <p style="font-size: 0.75rem; text-transform: uppercase; letter-spacing: 0.1em; color: #9a8a7a;">Artist & Creator</p>
          </div>

          <nav style="gap: 2rem; align-items: center;" class="hidden md:flex">
            <a href="/series" class="nav-link" style="font-size: 0.875rem; text-transform: uppercase; letter-spacing: 0.05em; color: #6b5d54; text-decoration: none;">
              Collections
